<?xml version="1.0" encoding="UTF-8"?>
<rss
 xmlns:dc="http://purl.org/dc/elements/1.1/"
 xmlns:content="http://purl.org/rss/1.0/modules/content/"
 xmlns:itunes="http://www.itunes.com/DTDs/Podcast-1.0.dtd"
 xmlns:media="http://search.yahoo.com/mrss"
 version="2.0">
<channel>
<ttl>60</ttl>
<title>{{ .Title }}</title>
<link>{{ .URL }}</link>
<description>
{{ .Title }}
</description>
<language>en</language>
<lastBuildDate><%=h vars[:now].rfc2822 %></lastBuildDate>
<generator>https://github.com/zchrykng/gocaster</generator>
{{- range $slug, $episode := .Episodes }}
<item>
<title>{{ .Title }}</title>
<link>{{ .File.Url }}</link>
<description>{{ .File.Name }}</description>
<itunes:author>{{ .File.Artist }}</itunes:author>
<author>{{ .File.Artist }}</author>
<guid>{{ .File.Url }}</guid>
<dc:creator>{{ .File.Artist }}</dc:creator>
<pubDate>{{ .File.Mtime.RFC2822 }}</pubDate>
<itunes:duration>{{ .File.Duration }}</itunes:duration>
<enclosure url="{{ .File.Url }}" type="{{ .File.Type }}" length="{{ .File.Size }}" />
</item>
{{- end }}
</channel>
</rss>